        <!-- 5. acciones de ventas y redireccion-->
        
         <forward name="agregarVEN" path="/verVEN.jsp"/>
         <forward name="consultarVEN" path="/verVEN.jsp"/>
          <forward name="todasVEN"  path="/todasVEN.jsp"/>
         <forward name="consultarIdVEN" path="/modVEN.jsp"/>
         <forward name="modificarVEN" path="/modVEN.jsp"/>
         <forward name="eliminarVEN" path="/eliminarVentas.jsp"/>
         <forward name="borrarVEN" path="/verVEN.jsp"/>
         <forward name="errorVEN" path="/formVentas.jsp"/>
